<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>distribution</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>src/main/assembly/layout</directory>
			<excludes>
				<exclude>**/*.sh</exclude>
				<exclude>**/*.gitignore</exclude>
			</excludes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>src/main/assembly/layout</directory>
			<includes>
				<include>**/*.sh</include>
			</includes>
			<fileMode>0700</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib/ingest</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<includes>
				<include>*:com.cloudera.companies.core.ingest</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/lib/query</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<includes>
				<include>*:com.cloudera.companies.core.query</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>
</assembly>